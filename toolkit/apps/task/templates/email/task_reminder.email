{% extends 'email/base.email' %}{% load humanize %}

{% block subject_line %}{{ subject }}{% endblock %}

{% block html_content %}

<p>{{ from_name }} has asked you to complete the "{{ item }}" task for "{{ matter }}" available at: <a href="{{ action_url }}">{{ action_url }}</a></p>

<p>The task is:</p>

<blockquote>{{ description }}</blockquote>

<p>And is due: <i>{{ date_due|naturaltime}} - {{ date_due }}<i></p>


{% endblock %}


